[mysqld]
user=mysql
pid-file=/var/run/mysqld/mysqld.pid
socket=/var/run/mysqld/mysqld.sock
datadir=/var/lib/mysql
bind-address=0.0.0.0  # âœ… Allows remote connections from backend container
skip-host-cache
skip-name-resolve

# Performance Tweaks
max_connections=200
innodb_flush_log_at_trx_commit=1
sync_binlog=1
query_cache_type=1
query_cache_limit=2M
query_cache_size=32M

[client]
default-character-set=utf8mb4
