[mysqld]
bind-address=0.0.0.0  # ✅ Allow external connections
sql_mode=""  # ✅ Ensure compatibility for older SQL commands
skip-networking=0  # ✅ Enable networking inside Docker
explicit_defaults_for_timestamp = 1  # ✅ Fix potential timestamp issues
default_authentication_plugin=mysql_native_password  # ✅ Avoid password authentication issues

[client]
default-character-set=utf8mb4

[mysqldump]
default-character-set=utf8mb4
